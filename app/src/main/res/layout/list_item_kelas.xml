<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/cardku_kelas"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/image_kelas"
                android:layout_width="210dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@mipmap/kelas_bg" />

            <TextView
                android:id="@+id/txtTitle_kelas"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/image_kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="title"/>

            <TextView
                android:id="@+id/txtSubtitle_kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/image_kelas"
                android:layout_below="@+id/txtTitle_kelas"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>

            <Button
                android:id="@+id/btnLhtSelengkapnya_kelas"
                android:layout_alignParentBottom="true"
                android:text="Lihat Selengkapnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>