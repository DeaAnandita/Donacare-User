<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp">

                <include
                    android:id="@+id/toolbar_home"
                    layout="@layout/my_toolbar" />
            </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/slidehome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/appbar">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:padding="10dp"
            android:background="@drawable/search" />
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            app:ci_width="5dp"
            app:ci_height="5dp"
            app:ci_drawable="@drawable/circleindicator_round"
            android:layout_marginTop="10dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_below="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </RelativeLayout>

        <TextView
            android:id="@+id/tv_Kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slidehome"
            android:layout_marginHorizontal="20dp"
            android:text="Kategori"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17dp"/>

            <Button
                android:id="@+id/btnDBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="7dp"
                android:text="Donasi Barang"
                android:textColor="@color/white"
                android:layout_below="@+id/tv_Kategori"/>

            <Button
                android:id="@+id/btnDDana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Donasi Dana"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/btnDBarang"
                android:layout_below="@+id/tv_Kategori"/>

            <Button
                android:id="@+id/btnDJasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:text="Donasi Jasa"
                android:textColor="@color/white"
                android:layout_below="@+id/btnDBarang"/>

            <TextView
                android:id="@+id/txtJadwalV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnDJasa"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp"
                android:text="Daftar Kelas"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"/>

            <androidx.cardview.widget.CardView
            android:id="@+id/cvJadwalV"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_below="@+id/txtJadwalV"
            app:cardElevation="3dp"
            android:layout_marginHorizontal="20dp"
            app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                    <TextView
                        android:id="@+id/txtjadwal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jadwal"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/color_donker"
                        android:fontFamily="@font/regular"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        />

                    <TextView
                        android:id="@+id/txtjadwal2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volunteer Jasa Pendidikan"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/color_donker"
                        android:fontFamily="@font/regular"
                        android:layout_below="@+id/txtjadwal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        />

                    <Button
                        android:id="@+id/btn_Lihat_Selengkapnya_Jadwal"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:text="Lihat Selengkapnya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/white"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtBerita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvJadwalV"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp"
                android:text="Berita Teratas"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListHome"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/white"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBerita"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/list_item"
        android:layout_marginHorizontal="20dp">

    </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>