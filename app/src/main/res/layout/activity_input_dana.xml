<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UI.InputDanaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarInput_Dana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <ImageView
        android:id="@+id/img_Input"
        android:layout_width="355dp"
        android:layout_height="200dp"
        android:src="@mipmap/img_bg"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/txt_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Korban Longsor Bandung"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kategori donasi: "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spPilihanDonasi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/sp_bg"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_nominal_inputDana"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nominal"
            android:background="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_noRekening_inputDana"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Rekening"
            android:background="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_atasNama_inputDana"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Atas Nama"
            android:background="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field2"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtInfoTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Transaksi :"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/txt_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer Melalui Bank BRI :"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txtInfoTransaksi"
                android:textStyle="bold"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tv_No"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_bank"
                android:text="No. Rekening : 0123456789"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_Nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_No"
                android:text="Atas Nama : Unknow"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/txt_bank2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer Melalui Bank BRI :"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_Nama"
                android:textStyle="bold"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tv_No2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_bank2"
                android:text="No. Rekening : 0123456789"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_Nama2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_No2"
                android:text="Atas Nama : Unknow"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_Kirim_Dana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="KIRIM"
        android:background="@drawable/btn_whatsapp"/>

</LinearLayout>

</ScrollView>